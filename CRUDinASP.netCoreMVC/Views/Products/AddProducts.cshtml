
@{
    ViewData["Title"] = "AddProducts";
}

<h1>AddProducts</h1>

@model Products1

<form method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Product Name</label>
        <input asp-for="Pname" type="text" class="form-control" id="exampleInputName" placeholder="Enter Product Name">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Product Catageroy</label>
        <input asp-for="Pcat" type="text" class="form-control" id="exampleInputCatageroy" placeholder="Enter Product Catageroy">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Product Price</label>
        <input asp-for="Price" type="text" class="form-control" id="exampleInputPrice" placeholder="Enter Product Price">
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>
